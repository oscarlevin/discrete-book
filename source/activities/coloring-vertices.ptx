					\foreach \x in {0,...,7}{
					\coordinate (a\x) at (\x*360/8:2);
					}
					\draw[thick] (a7) -- (a0);
					\foreach \x in {0,...,6}{
					\pgfmathtruncatemacro{\next}{\x + 1}
					\draw[very thick] (a\x) -- (a\next);
					\draw (a\x) \vo;
					}
					\draw (a7) \vo;
					\end{tikzpicture}
					}
					</latex-image>
				</image>
			</exercise>

